<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_half_margin_size"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="MUJER DESAPARECIDA" />

        <ImageView
            android:id="@+id/ivImageNotice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_half_margin_size"
            android:layout_marginEnd="@dimen/default_half_margin_size"
            android:layout_marginBottom="@dimen/default_half_margin_size"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default_half_margin_size"
            android:layout_marginEnd="@dimen/default_half_margin_size"
            android:layout_marginBottom="@dimen/default_half_margin_size"
            android:lineSpacingExtra="4sp"
            android:textSize="14sp"
            tools:text="María Aznar de 85 años, 1.56 de estatura. Falta de su domicilio desde la tarde del miércoles 20 de enero del 2020. Vestía una chaqueta gris, una falda negra y unos zapatos marrones. Desapareció por el barrio de las Delicias. Llamar al 062 en caso de verla." />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>