<?xml version="1.0" encoding="utf-8"?><!--Si no se pone este layout no se genera la clase FragmentMainBinding para usarla en MainFragment.kt-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".screens.mainScreen.MainFragment">

    <data>

        <variable
            name="mainViewModel"
            type="com.teltronic.app112.screens.mainScreen.MainViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtBtnLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/txt_btn_main_location"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/btnLocation"
            app:layout_constraintStart_toStartOf="@+id/btnLocation"
            app:layout_constraintTop_toBottomOf="@+id/btnLocation" />

        <ImageButton
            android:id="@+id/btnLocation"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="70dp"
            android:background="@color/colorPrimary"
            android:contentDescription="@string/location_title"
            android:onClick="@{()->mainViewModel.navigateToLocation()}"
            android:padding="20dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_location_on_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>